<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:stretchColumns="0,1,2,3"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:local="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"></android.support.v7.widget.Toolbar>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <EditText
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_span="4"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background"
            android:clickable="false"
            android:cursorVisible="false"
            android:editable="false"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:gravity="right|center_vertical"
            android:inputType="numberDecimal"
            android:text="0"></EditText>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_weight="1"
            android:background="@color/btcolor"
            android:text="7"
            android:textColor="@color/Corbt" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_weight="1"
            android:background="@color/btcolor"
            android:text="8"
            android:textColor="@color/Corbt" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_weight="1"
            android:background="@color/btcolor"
            android:text="9"
            android:textColor="@color/Corbt" />

        <Button
            android:id="@+id/btn_divisao"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="3"
            android:layout_weight="1"
            android:background="@color/btcolor"
            android:text="/"
            android:textColor="@color/Corbt" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_weight="1"
            android:background="@color/btcolor"
            android:text="4"
            android:textColor="@color/Corbt" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_weight="1"
            android:background="@color/btcolor"
            android:text="5"
            android:textColor="@color/Corbt" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_weight="1"
            android:background="@color/btcolor"
            android:text="6"
            android:textColor="@color/Corbt" />

        <Button
            android:id="@+id/btn_multiplicacao"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="3"
            android:layout_weight="1"
            android:background="@color/btcolor"
            android:text="*"
            android:textColor="@color/Corbt" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/bt1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_weight="1"
            android:background="@color/btcolor"
            android:text="1"
            android:textColor="@color/Corbt" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_weight="1"
            android:background="@color/btcolor"
            android:text="2"
            android:textColor="@color/Corbt" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_weight="1"
            android:background="@color/btcolor"
            android:text="3"
            android:textColor="@color/Corbt" />

        <Button
            android:id="@+id/btn_subtracao"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="3"
            android:layout_weight="1"
            android:background="@color/btcolor"
            android:text="-"
            android:textColor="@color/Corbt" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/bt_ponto"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_weight="1"
            android:background="@color/btcolor"
            android:text="."
            android:textColor="@color/Corbt" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="1"
            android:layout_weight="1"
            android:background="@color/btcolor"
            android:text="0"
            android:textColor="@color/Corbt" />

        <Button
            android:id="@+id/btn_resultado"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_weight="1"
            android:background="@color/btcolor"
            android:text="="
            android:textColor="@color/Corbt" />

        <Button
            android:id="@+id/btn_soma"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_column="3"
            android:layout_weight="1"
            android:background="@color/btcolor"
            android:text="+"
            android:textColor="@color/Corbt" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/btn_apagar_caracter"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="0"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="@color/btcolor"
            android:text="apagar"
            android:textColor="@color/Corbt" />

        <Button
            android:id="@+id/btn_limpar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="@color/btcolor"
            android:text="C"
            android:textColor="@color/Corbt" />
    </TableRow>

</TableLayout>